import java.util.Random;
import java.util.Scanner;
import java.util.random.*;

public class lab2t17 {
    public static void main(String[] args) {
        Random random = new Random();
        Scanner input = new Scanner(System.in);
        int number = random.nextInt(100);
        System.out.println("Enter your lottery pick (two digits): "+number);
        int guess = input.nextInt();
        System.out.printf("The lottery number is ");
        if (number<10) System.out.println("0"+number);
        else System.out.println(number);

        if (number  == guess)
            System.out.println("Exact match: you win $10000");

        else{
            int n1=number/10;
            int n2=number%10;
            int g1=guess/10;
            int g2=guess%10;

            if (n1==g2 && n2==g1)
                System.out.println("Match all digits: you win $3000");
            else if (n1==g1 || n1==g2 || n2==g1 || n2==g2)
                System.out.println("Match one digits: you win $1000");
            else
                System.out.println("Sorry: no match");
        }
    }
}
