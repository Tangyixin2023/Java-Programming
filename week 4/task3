public class lab3t3 {
    public static void main(String[] args) {
        int date = 100 % 7;
        switch (date){
            case 0:
                System.out.println("the day in 100 days is Tuesday.");
                break;
            case 1:
                System.out.println("the day in 100 days is Wednesday.");
                break;
            case 2:
                System.out.println("the day in 100 days is Thursday.");
                break;
            case 3:
                System.out.println("the day in 100 days is Friday.");
                break;
            case 4:
                System.out.println("the day in 100 days is Saturday.");
                break;
            case 5:
                System.out.println("the day in 100 days is Sunday.");
                break;
            case 6:
                System.out.println("the day in 100 days is Monday.");
                break;
        }
    }
}
